<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_item_note"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_delete_note"
        android:layout_marginEnd="10dp"
        android:text="Islamabad"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_place_latlng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="33.455,33.543"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_place_name"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/iv_delete_reminder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_delete" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_place_latlng"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_reminder_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Testing Reminder"
            android:textSize="16dp"
            android:layout_toStartOf="@+id/iv_marker"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_marker"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/marker"
            android:padding="5dp"
            />

    </RelativeLayout>



</RelativeLayout>